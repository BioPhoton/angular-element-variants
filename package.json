{
  "name": "angular-element-variants",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "lerna": "lerna",
    "publish": "yarn run version && yarn run build && lerna publish",
    "version": "lerna version && lerna run prepare",
    "version:bump-only": "lerna version --no-git-tag-version",
    "build": "lerna run build",
    "format": "prettier --write \"**/*.{js,ts,html,md}\""
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.0",
    "@angular/compiler": "^8.2.2",
    "@angular/compiler-cli": "^8.2.2",
    "@angular/core": "^8.2.13",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/copy": "^0.3.1",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.118",
    "@types/node": "~13.1.0",
    "@types/webpack": "^4.4.26",
    "@types/webpack-dev-server": "^3.1.5",
    "@types/webpack-merge": "^4.1.3",
    "cpy-cli": "^3.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "fs-extra": "^8.1.0",
    "gzip-all": "1.0.0",
    "husky": "^3.0.9",
    "jest": "^24.7.1",
    "lerna": "^3.20.0",
    "lint-staged": "^9.4.3",
    "lodash": "^4.17.11",
    "node-ts": "^5.0.2",
    "prettier": "^1.19.1",
    "quicktype": "^15.0.174",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "schematics-utilities": "^2.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "tslint": "~5.18.0",
    "typescript": "3.6.4",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,html,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@angular-devkit/schematics-cli": "^0.803.21",
    "@angular/cli": "^8.3.21",
    "copy": "^0.3.2"
  }
}
