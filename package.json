{
  "name": "angular-element-variants",
  "license": "Apache-2.0 see - https://github.com/BioPhoton/angular-element-variants/LICENSE.md",
  "private": false,
  "scripts": {
    "lerna": "lerna",
    "publish": "lerna publish",
    "build": "yarn build:core && yarn build:integration-helper && yarn build:builder",
    "build:builder": "cd packages/builder-webpack && yarn build",
    "build:core": "cd packages/core && yarn build",
    "build:integration-helper": "cd packages/integration-helper && yarn build",
    "format": "prettier --write \"**/*.{js,ts,html,md}\""
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.0",
    "@angular/compiler": "^8.2.2",
    "@angular/compiler-cli": "^8.2.2",
    "@angular/core": "^8.2.13",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.118",
    "@types/node": "~13.1.0",
    "@types/webpack": "^4.4.26",
    "@types/webpack-dev-server": "^3.1.5",
    "@types/webpack-merge": "^4.1.3",
    "cpy-cli": "^3.0.0",
    "fs-extra": "^8.1.0",
    "gzip-all": "1.0.0",
    "husky": "^3.0.9",
    "jest": "^24.7.1",
    "lerna": "^3.20.0",
    "lint-staged": "^9.4.3",
    "lodash": "^4.17.11",
    "node-ts": "^5.0.2",
    "prettier": "^1.19.1",
    "quicktype": "^15.0.174",
    "rimraf": "^3.0.0",
    "rxjs": "^6.4.0",
    "ts-jest": "^24.0.0",
    "ts-node": "~8.3.0",
    "tslib": "^1.10.0",
    "tslint": "~5.18.0",
    "typescript": "3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,html,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
