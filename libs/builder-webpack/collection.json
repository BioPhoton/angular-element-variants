{
  "$schema": "node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "description": "Installs and sets up the angular-element-variants library",
      "factory": "./schematics/ng-add/index#ngAdd",
      "schema": "./schematics/ng-add/schema.json"
    },
    "add-variant": {
      "description": "Creates variants folder and default variant.ts file",
      "factory": "./schematics/add-variant/index#addVariant",
      "schema": "./schematics/add-variant/schema.json"
    }
  }
}
