{
  "name": "@angular-element-variants/core",
  "version": "0.0.0-beta.23",
  "description": "Custom webpack builders for WebComponents built with Angular elements. Allow to ship webComponents by configuration without any changes on the project structure.",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run compile",
    "postbuild": "npm run prepare:dist",
    "clean": "npx rimraf dist/**/*",
    "link": "npm link",
    "compile": "tsc -p tsconfig.build.json",
    "prepare:dist": "ts-node tooling/prepare-dist.ts"
  },
  "keywords": [
    "Angular",
    "WebComponents",
    "Bunlding",
    "AngularArchtitectAPI"
  ],
  "author": "Michael Hladky",
  "repository": {
    "type": "git",
    "url": "https://github.com/BioPhoton/angular-element-variants/tree/master/packages/core"
  },
  "homepage": "https://github.com/BioPhoton/angular-element-variants#readme",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0.0"
  }
}
